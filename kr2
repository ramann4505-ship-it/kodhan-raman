#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main() {
    srand(time(0));  // Seed for random numbers
    
    int score = 0;
    int rounds = 5;

    cout << "=== Number Adding Game ===" << endl;
    cout << "You will be given 5 addition questions." << endl;

    for(int i = 1; i <= rounds; i++) {
        int num1 = rand() % 50 + 1;  // Random number between 1 and 50
        int num2 = rand() % 50 + 1;
        int answer;

        cout << "\nRound " << i << endl;
        cout << "What is " << num1 << " + " << num2 << "? ";
        cin >> answer;

        if(answer == num1 + num2) {
            cout << "Correct! ðŸŽ‰" << endl;
            score++;
        } else {
            cout << "Wrong! The correct answer is " << num1 + num2 << endl;
        }
    }

    cout << "\nGame Over!" << endl;
    cout << "Your final score is: " << score << " out of " << rounds << endl;

    return 0;
}
